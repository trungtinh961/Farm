<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_setting"
    android:background="@drawable/background"
    android:padding="20dp">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GIÁ TRỊ HIỆN TẠI SPEAKER"
        android:fontFamily="serif"
        android:textColor="#000000"
        android:textFontWeight="20"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_below="@+id/seek_barcustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="CÀI ĐẶT NHIỆT ĐỘ CẢNH BÁO"
        android:fontFamily="serif"
        android:textColor="#000000"
        android:textFontWeight="20"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.akaita.android.circularseekbar.CircularSeekBar
        android:id="@+id/seekbar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        app:enabled="true"
        app:innerCircleColor="#e0f7e9"
        app:min="0"
        app:max="100"
        app:progress="0"
        app:progressTextSize="26"
        app:progressTextColor="@android:color/black"
        app:ringColor="@color/colorAccent"
        app:ringWidth="0.5"
        app:showIndicator="true"
        app:showInnerCircle="true"
        app:speedMultiplier="17"
        tools:ignore="MissingConstraints" />

    <com.zhouyou.view.seekbar.SignSeekBar
        android:id="@+id/seek_barcustom"
        android:layout_below="@id/textView2"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginTop="10dp"
        app:ssb_max="5000"
        app:ssb_section_text_position="bottom_sides"
        app:ssb_show_progress_in_float="false"
        app:ssb_show_section_mark="false"
        app:ssb_show_section_text="true"
        app:ssb_show_sign="true"
        app:ssb_show_thumb_text="false"
        app:ssb_track_size="10dp"
        app:ssb_sign_arrow_height="5dp"
        app:ssb_sign_arrow_width="10dp"
        app:ssb_sign_border_color="@color/colorAccent"
        app:ssb_sign_border_size="10dp"
        app:ssb_sign_color="@color/colorAccent"
        app:ssb_track_color="@color/colorAccent"
        app:ssb_section_text_size="21dp"
        app:ssb_sign_text_size="20dp"
        app:ssb_sign_show_border="true"/>
