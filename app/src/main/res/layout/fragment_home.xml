<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_home"
    android:background="@drawable/backgroundnew"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/arc_progress1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:arc_bottom_text="Nhiệt độ"
            app:arc_bottom_text_size="20dp"
            app:arc_progress="30"
            app:arc_stroke_width="8dp"
            app:arc_text_color="@color/design_default_color_on_secondary" />

        <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/arc_progress2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            app:arc_bottom_text="Độ ẩm"
            app:arc_bottom_text_size="20dp"
            app:arc_progress="70"
            app:arc_stroke_width="8dp"
            app:arc_text_color="@color/design_default_color_on_secondary" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>